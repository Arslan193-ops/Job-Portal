@model Job_Portal.Models.Application

@{
    ViewData["Title"] = "Delete Application";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">⚠️ Delete Application</h3>
        </div>
        <div class="card-body">
            <h5 class="text-muted">Are you sure you want to delete this application?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.AppliedDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AppliedDate)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Job Title
                </dt>
                <dd class="col-sm-9">
                    @Model.Job?.Title
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Applicant Name
                </dt>
                <dd class="col-sm-9">
                    @Model.User?.Name
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Applicant Email
                </dt>
                <dd class="col-sm-9">
                    @Model.User?.Email
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="ApplicationId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}