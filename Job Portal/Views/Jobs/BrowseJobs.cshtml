@model IEnumerable<Job_Portal.Models.Job>

@{
    ViewData["Title"] = "Browse Jobs";
    var userRole = Context.Session.GetString("UserRole"); // get role from session
}

<h2>Available Jobs</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Employer</th>
            <th>Posted Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.Location</td>
                <td>@job.Employer?.Name</td>
                <td>@job.PostedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@job.JobId" 
                       class="btn btn-sm btn-info">View</a>

                    @if (userRole == "JobSeeker")  
                    {
                        <a asp-controller="Applications" asp-action="Create" 
                           asp-route-jobId="@job.JobId"
                           class="btn btn-sm btn-success">Apply</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
