@model Job_Portal.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<div class="card shadow-lg p-4 rounded-3">
    <h2 class="text-danger mb-3">Delete Job</h2>
    <p class="fw-bold">Are you sure you want to delete this job?</p>

    <div class="border rounded p-3 bg-light mb-3">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PostedDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PostedDate)</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="JobId" />
        <button type="submit" class="btn btn-danger px-4">Delete</button>
        <a asp-controller="Users" asp-action="EmployerDashboard" class="btn btn-secondary ms-2 px-4">Cancel</a>
    </form>
</div>