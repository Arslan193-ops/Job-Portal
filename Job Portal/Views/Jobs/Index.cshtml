@model IEnumerable<Job_Portal.Models.Job>

@{
    ViewData["Title"] = "All Jobs";
}

<h2>All Jobs</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Post New Job</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Posted Date</th>
            <th>Employer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.Location</td>
                <td>@job.PostedDate.ToString("dd/MM/yyyy")</td>
                <td>@job.Employer?.Email</td> <!-- show employer email -->
                <td>
                    <a asp-action="Edit" asp-route-id="@job.JobId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@job.JobId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="Details" asp-route-id="@job.JobId" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
