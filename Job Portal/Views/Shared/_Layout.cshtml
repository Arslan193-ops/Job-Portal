@using Microsoft.AspNetCore.Http
@inject Job_Portal.Models.JobPortalContext _context

@{
    var email = Context.Session.GetString("UserEmail");
    var user = _context.Users.FirstOrDefault(u => u.Email == email);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Job_Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Job_Portal.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background: linear-gradient(45deg, #007bff, #00c6ff);
        }

        .navbar-brand, .nav-link, .footer a {
            color: white !important;
            font-weight: 500;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #f1f1f1 !important;
            }

        .footer {
            background: #212529;
            color: #bbb;
            padding: 15px 0;
        }

            .footer a {
                color: #0dcaf0 !important;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .greeting {
            color: #fff;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Job_Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @* Employer-specific links *@
                        @if (user != null && user.Role == "Employer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="EmployerDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Jobs" asp-action="Create">Post Job</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Jobs" asp-action="MyJobs">My Jobs</a>
                            </li>
                        }

                        @* JobSeeker-specific links *@
                        else if (user != null && user.Role == "JobSeeker")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="JobSeekerDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Jobs" asp-action="BrowseJobs">Browse Jobs</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (user != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link greeting">Hello, @user.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto text-center">
        <div class="container">
            &copy; 2025 - Job_Portal - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
