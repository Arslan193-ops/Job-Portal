@model IEnumerable<Job_Portal.Models.Job>

<h2>Employer Dashboard</h2>

<p>
    <a asp-controller="Jobs" asp-action="Create">Post a New Job</a>
</p>

<table>
    <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Posted Date</th>
        <th></th>
    </tr>
    @foreach (var job in Model)
    {
        <tr>
            <td>@job.Title</td>
            <td>@job.Location</td>
            <td>@job.PostedDate</td>
            <td>
                <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@job.JobId">Edit</a> |
                <a asp-controller="Jobs" asp-action="Delete" asp-route-id="@job.JobId">Delete</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Jobs" asp-action="MyJobs">My Posted Jobs</a>

